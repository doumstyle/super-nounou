<div class="container">
  <h2 class="mb-4">Welcome! Please create a new profile below</h2>
  <form action="/users/create" method="POST" enctype="multipart/form-data" class="d-flex flex-column">

    <div class="form-row">
      <div class="form-group col-6">
        <input type="text" id="firstName" name="firstName" required class="form-control" placeholder="Firstname" />
      </div>
      <div class="form-group col">
        <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Lastname" />
      </div>
    </div>


    <div class="form-row">
      <div class="form-group col-4">
         <input type="text" id="role" name="role" class="form-control" value="{{role}}" readonly />
      </div>
      <div class="form-group col">
        <input type="text" id="age" name="age" class="form-control" placeholder="Age" />
      </div>
      <div class="form-group col">
        <input type="text" id="cellphone" name="cellphone" class="form-control" placeholder="Cellphone" />
      </div>
    </div>

    <div class="form-group">
      <input type="text" name="address" id="address" class="form-control" placeholder="Address">
    </div>

    <div class="form-row">
      <div class="form-group col-6">
        <input type="text" id="numberOfKids" name="numberOfKids" class="form-control" placeholder="Number of Kids" />
      </div>
      <div class="form-group col">
        <input type="text" id="kidsAge" name="kidsAge" class="form-control" placeholder="Kids Age" />
      </div>
    </div>
    
    <div class="form-group">
      <select name="availability" id="availability" class="form-control" placeholder="">
        <option value="fullTime">Fulltime</option>
        <option value="partTime">Part-time</option>
        <option value="evening">Evening</option>
        <option value="afterSchool">After School</option>
      </select>
    </div>
    
    <div class="form-group">
      <textarea type="text" id="description" name="description" class="form-control"
        placeholder="Description"></textarea>
    </div>


    <div class="form-group">
      <input type="file" id="picture" name="picture" class=" form-control form-control-lg p-1" placeholder="Picture" />
    </div>

    <button class="btn btn-lg btn-primary d-flex align-self-center">Become a Family</button>

  </form>
</div>