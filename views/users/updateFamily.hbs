<div class="container">
	<form action="/users/{{family._id}}/update" method="POST" enctype="multipart/form-data" class="d-flex flex-column">

		<div class="form-row">
			<div class="form-group col-4">
				{{!-- <label for="firstName">Firstname</label> --}}
				<input type="text" id="firstName" name="firstName" required value="{{family.firstName}}"
					placeholder="Firstname" class="form-control" />
			</div>
			<div class="form-group col">
				{{!-- <label for="lastName">Lastname</label> --}}
				<input type="text" id="lastName" name="lastName" value="{{family.lastName}}" placeholder="Lastname"
					class="form-control" />
			</div>
			<div class="form-group">
				{{! <label for="role">Role:</label> }}
				<input type="hidden" id="role" name="role" value={{family.role}} class="form-control" />
			</div>
			<div class="form-group col">
				{{!-- <label for="age">Age</label> --}}
				<input type="number" id="age" name="age" value={{family.age}} placeholder="Age" class="form-control" />
			</div>
		</div>

		<div class="form-row">
			<div class="form-group col-6">
				{{!-- <label for="cellphone">Cellphone</label> --}}
				<input type="text" id="cellphone" name="cellphone" value="{{family.cellphone}}" placeholder="Cellphone"
					class="form-control" />
			</div>
			<div class="form-group col">
				{{!-- <label for="experience">Experience</label> --}}
				<input type="number" id="experience" name="experience" value="{{family.experience}}"
					placeholder="Experience" class="form-control" />
			</div>
		</div>

		<div class="form-group">
			{{!-- <label for="resume">Resume</label> --}}
			<textarea type="text" id="resume" name="resume" value="{{family.resume}}" placeholder="Resume"
				class="form-control"></textarea>
		</div>

		

		<div class="form-group">
			{{!-- <label for="picture">Picture:</label> --}}
			<input type="file" id="picture" name="picture" class="form-control form-control-lg p-1" />
		</div>

		<button class="btn btn-lg btn-primary d-flex align-self-center">Update</button>

	</form>
</div>