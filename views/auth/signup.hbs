<div class="container">
  <h2 class="mb-5">Welcome! Please Sign up Below</h2>
  <form method="post" action="/auth/signup" class="d-flex flex-column mb-3">
    <!--TODO: add here flash messag partail -->
    <div class="form-group">
      <label for="name"></label>
      <input class="form-control form-control-lg" type="text" id="name" name="firstName" value=""
        placeholder="Firstname" />
    </div>
    <div class="form-group">
      <label for="lastname"></label>
      <input class="form-control form-control-lg" type="text" id="lastname" name="lastName" value=""
        placeholder="Lastname" />
    </div>
    <div class="form-group">
      <label for="email"></label>
      <input class="form-control form-control-lg" type="email" id="email" name="email" value="" placeholder="Email" />
    </div>
    <div class="form-group">
      <label for="password"></label>
      <input class="form-control form-control-lg" type="password" id="password" name="password" value=""
        placeholder="Password" />
    </div>

    <div class="form-group mt-4">
      <div class="form-control form-control-lg">
        <div class="form-row">
          <p class="col-2">Who are you?</p>
          <div class="form-check-inline col-2 align-items-baseline">
            <input type="radio" id="babysitter" name="role" value="babysitter" class="form-check-input" checked />
            <label for="babysitter">babysitter</label>
          </div>
          <div class="form-check-inline col-2 align-items-baseline">
            <input type="radio" id="family" name="role" value="family" class="form-check-input" />
            <label for="family">family</label>
          </div>
        </div>
      </div>
    </div>

    <button class="btn btn-lg btn-primary d-flex align-self-center">Sign up</button>
  </form>
  <p class="text-center">
    Already got an account ?
    <a href="/auth/signin">Sign in</a>
  </p>
</div>