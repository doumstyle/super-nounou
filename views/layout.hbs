<html>

<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  {{#each js}}
  <script src="/javascripts/{{this}}.js" type="module"></script>
  {{/each}}
  {{#each css}}
  <link rel="stylesheet" href="/stylesheets/{{this}}.css" />
  {{/each}}
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light p-4 d-flex justify-content-between">
    <div class="d-flex justify-content-start">
      <a href="/" class="nav-link text-primary bg-light">Home</a>
      <a href="/users" class="nav-link text-primary bg-light">Users</a>
      <a href="/matches" class="nav-link text-primary bg-light">Matches</a>
    </div>
    <div class="d-flex justify-content-end">
      {{#unless isLoggedIn}}
      <a href="/auth/signup" class="nav-link bg-primary btn text-white mr-3">Sign up</a>
      <a href="/auth/signin" class="nav-link bg-light btn btn-outline-primary">Sign in</a>
      {{/unless}}
      {{#if isLoggedIn}}

      {{#compare currentUser.role 'babysitter' operator="===" }}
      <a href="/users/my-resume"><button class="btn btn-outline-primary">My profile</button></a>
      {{/compare }}
      {{#compare currentUser.role 'family' operator="===" }}
      <a href="/users/my-family"><button class="btn btn-outline-primary">My profile</button></a>
      {{/compare }}

      <a href="/auth/signout"><button class="btn btn-danger ml-3">Sign out</button></a>
      {{/if}}
    </div>

  </nav>

  {{{body}}}
</body>

</html>