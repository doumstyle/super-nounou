<html>
  <head>
    <title>{{title}}</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    {{#each css}}
      <link rel="stylesheet" href="/stylesheets/{{this}}.css" />
    {{/each}}
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg navbar-dark bg-dark mb-5 d-flex justify-content-between"
    >
      <div class="d-flex justify-content-start">
        <a href="/" class="nav-link text-light bg-dark">Home</a>
        <a href="/users" class="nav-link text-light bg-dark">Users</a>
        <a href="/matches" class="nav-link text-light bg-dark">Matches</a>
      </div>
      <div class="d-flex justify-content-end">
        <a href="/auth/signup" class="nav-link bg-dark btn btn-outline-primary mr-3">Sign up</a>
        {{#unless isLoggedIn}}
          <a href="/auth/signin" class="nav-link bg-dark btn btn-outline-success">Sign in</a>
        {{/unless}}
      </div>

    </nav>

    {{{body}}}
  </body>
</html>